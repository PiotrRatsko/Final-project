<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="@Model.registerModel.Email">Введите Email</label><br />
            <input type="text" asp-for="@Model.registerModel.Email" />
            <span asp-validation-for="@Model.registerModel.Email" />
        </div>
        <div>
            <label asp-for="@Model.registerModel.Password">Введите пароль</label><br />
            <input asp-for="@Model.registerModel.Password" />
            <span asp-validation-for="@Model.registerModel.Password" />
        </div>
        <div>
            <label asp-for="@Model.registerModel.ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="@Model.registerModel.ConfirmPassword" />
            <span asp-validation-for="@Model.registerModel.ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>