@model InternetShop.Models.RegisterModel
<body>
    <!-- Register Start -->
    <div class="register">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="register-form">
                        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                            <div class="validation" asp-validation-summary="All"></div>
                            <div>
                                <div class="col-md-6">
                                    <label>Please register</label>
                                    <input class="form-control" type="text" asp-for="Email" placeholder="E-mail" />
                                    <span asp-validation-for="Email" />
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="text" placeholder="Password" asp-for="Password" />
                                    <span asp-validation-for="Password" />
                                </div>
                                <div class="col-md-6">
                                    <input class="form-control" type="text" placeholder="ReEnter Password" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="ConfirmPassword" />
                                </div>

                                <div class="col-md-12">
                                    <input type="submit" value="Submit" class="btn btn-outline-dark" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register End -->
</body>