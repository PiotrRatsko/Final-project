<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("MetatagsPartial")
    @await Html.PartialAsync("CssPartial")
</head>

<body>
    @await Html.PartialAsync("BrandPartial")
    @await Html.PartialAsync("NavBarPartial")
    <!-- Login Start -->

    <div class="login">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login-form">
                        <div class="row">

                            <a asp-action="Register" asp-controller="Account">Регистрация</a>
                            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                                <div class="validation" asp-validation-summary="ModelOnly"></div>
                                <div>
                                    <div class="col-md-6">
                                        <label asp-for="@Model.loginModel.Email">Введите Email</label>
                                        <input type="text" asp-for="@Model.loginModel.Email" />
                                        <span asp-validation-for="@Model.loginModel.Email" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="@Model.loginModel.Password">Введите пароль</label>
                                        <input asp-for="@Model.loginModel.Password" />
                                        <span asp-validation-for="@Model.loginModel.Password" />
                                    </div>
                                    <div class="col-md-12">
                                        <input type="submit" value="Войти" class="btn btn-outline-dark" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Login End -->
    @await Html.PartialAsync("FooterPartial")
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    @await Html.PartialAsync("ScriptsPartial")
</body>
</html>
