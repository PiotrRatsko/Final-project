<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("MetatagsPartial")
    @await Html.PartialAsync("CssPartial")
</head>

<body>
    @await Html.PartialAsync("BrandPartial")
    @await Html.PartialAsync("NavBarPartial")
    <!-- Cart Start -->
    <div class="cart-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-page-inner">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Remove</th>
                                    </tr>
                                </thead>
                                @foreach (var item in @ViewBag.Products)
                                {
                                    <tbody class="align-middle">
                                        <tr>
                                            <td>
                                                <div class="img">
                                                    <a href="#"><img src="img/@item.Key.Picter" alt="Image"></a>
                                                    <p>@item.Key.Name</p>
                                                </div>
                                            </td>
                                            <td>@item.Key.Price</td>
                                            <td>
                                                <div class="qty">
                                                    <a class="btn-minus" href="@Url.Action("MinusQuantity", "Cart", new {guid = item.Key.Id })"><i class="fa fa-minus"></i></a>
                                                    <input type="text" value="@item.Value">
                                                    <a class="btn-plus" href="@Url.Action("PlusQuantity", "Cart", new {guid = item.Key.Id })"><i class="fa fa-plus"></i></a>
                                                </div>
                                            </td>
                                            @{ int total = @item.Key.Price * @item.Value;}
                                            <td>@total</td>
                                            <td><a class="fa fa-trash" href="@Url.Action("RemoveProduct", "Cart", new {guid = item.Key.Id })"></a></td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart-page-inner">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="cart-summary">
                                    <div class="cart-content">
                                        <h1>Cart Summary</h1>
                                        <p>Sub Total<span>@Model.Store.Cart.TotalSum</span></p>
                                        <p>Shipping Cost<span>Free</span></p>
                                        <h2>Grand Total<span>@Model.Store.Cart.TotalSum</span></h2>
                                    </div>
                                    <div class="cart-btn">
                                        <button>Order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->
    @await Html.PartialAsync("FooterPartial")
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    @await Html.PartialAsync("ScriptsPartial")
</body>
</html>
